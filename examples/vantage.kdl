// Vantage プロセス設定ファイル (KDL形式)

meta {
    version "1.0.0"
    // schemaとcreated_at、updated_atは省略（None）
}

// シンプルなプロセス定義
process "simple-server" {
    command "python"
    args "-m" "http.server" "8080"
    cwd "/tmp"
    auto_start #false
}

// 単一引数のプロセス
process "sleep-process" {
    command "/bin/sleep"
    args "3600"
    cwd "/tmp"
    auto_start #false
}

// 引数なしのプロセス
process "date-process" {
    command "/bin/date"
    cwd "/tmp"
    auto_start #true
}


